# CapCut Account Sharing Platform - Main Environment Variables

# Database Configuration
POSTGRES_DB=capcut_db
POSTGRES_USER=capcut_user
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://capcut_user:your_secure_database_password_here@postgres:5432/capcut_db

# Service URLs
BOT_SERVICE_URL=http://bot:5000
FRONTEND_URL=http://localhost:3000

# CapCut Account Credentials
CAPCUT_EMAIL=your_capcut_email@gmail.com
CAPCUT_PASSWORD=your_capcut_password_here

# Gmail Configuration (for email automation)
GMAIL_USER=your_gmail_email@gmail.com
GMAIL_EMAIL=your_gmail_email@gmail.com
GMAIL_APP_PASSWORD=your_16_character_gmail_app_password

# IMAP Settings
IMAP_HOST=imap.gmail.com
IMAP_PORT=993

# Security
SECRET_KEY=your_very_secure_secret_key_here
ENVIRONMENT=production

# Bot Configuration
HEADLESS=true
PORT=5000

# Flask Environment
FLASK_ENV=production